/**app.wxss**/
.page_body {
  position: relative;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
  box-sizing: border-box;
}

.currency_info {
  position: relative;
  height: 35px;
  width: 95%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 5px 0;
  box-sizing: border-box;
}

.container {
  position: relative;
  width: 100%; 
  height: 0%; 
  top: 0px;
  bottom: 0px;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

.card {
  position: relative;
  margin-top: 5px;
  border-style: solid;
  border-width: 1.5px;
  border-radius: 10px;
  border-color: darkgrey;
  width: 80%;
  height: 240px; /** card 的高度 **/
}

.canvas {
    width: 100%;
    height: 190px;
    transform: scaleX(1.0)
}